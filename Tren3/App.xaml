<Application x:Class="Tren3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Tren3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButtonNavigate">
            <Setter Property="Button.Width" Value="200"/>
            <Setter Property="Button.FontSize" Value="20"/>
            <Setter Property="Button.Margin" Value="10"/>
            <Setter Property="Button.Background" Value="#FFEDF032"/>
        </Style>
        <Style x:Key="TextTable">
            <Setter Property="TextBlock.FontSize" Value="18"/>
        </Style>
        <Style x:Key="EditText">
            <Setter Property="TextBlock.FontSize" Value="15"/>
            <Setter Property="TextBox.FontSize" Value="15"/>
            <Setter Property="ComboBox.FontSize" Value="15"/>
            <Setter Property="TextBlock.Margin" Value="5"/>
            <Setter Property="TextBox.Margin" Value="5"/>
            <Setter Property="ComboBox.Margin" Value="5"/>
        </Style>
        <Style x:Key="ButtonAccent">
            <Setter Property="Button.Width" Value="200"/>
            <Setter Property="Button.FontSize" Value="15"/>
            <Setter Property="Button.Margin" Value="10"/>
            <Setter Property="Button.Background" Value="#FFEDF032"/>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="ListView.FontSize" Value="20"/>
        </Style>
    </Application.Resources>
</Application>
