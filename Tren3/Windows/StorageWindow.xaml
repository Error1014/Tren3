<Window x:Class="Tren3.Windows.StorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tren3.Windows"
        mc:Ignorable="d"
        Title="Склады" Height="400" Width="600"
        MinHeight="400" MinWidth="600">
    <Grid>
        <ListView x:Name="ListViewStorage">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="auto" DisplayMemberBinding="{Binding addres}" Header="Адрес"/>
                    <GridViewColumn Width="auto" DisplayMemberBinding="{Binding type}" Header="Тип материала"/>
                    <GridViewColumn Width="auto" DisplayMemberBinding="{Binding distantion}" Header="Расстояние до центра(км)"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
