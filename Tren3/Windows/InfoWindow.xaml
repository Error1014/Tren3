<Window x:Class="Tren3.Windows.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tren3.Windows"
        mc:Ignorable="d"
        Title="InfoWindow" Height="400" Width="600"
        MinHeight="400" MinWidth="600">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock FontSize="30" TextWrapping="Wrap">
            <Run Text="Материал "/>
            <Run Text="{Binding Title}"/>
            <Run Text=" со склада №" />
            <Run Text="{Binding Storage.Number}"/>
            <Run Text=" имеет самый большой остаток: "/>
            <Run Text="{Binding Ostat}"/>
        </TextBlock>
    </Grid>
</Window>
